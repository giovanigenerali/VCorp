<% form_for @report do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :employee %><br />
	<%= collection_select(:report, :employee_id, @employees, :id, :name, {:prompt => true} ) %>
  </p>
  <p>
    <%= f.label :car %><br />
	<%= collection_select(:report, :car_id, @cars, :id, :model_board, {:prompt => true} ) %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.check_box :status %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
