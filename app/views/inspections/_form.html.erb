<% form_for @inspection do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :car %><br />
	<%= collection_select(:inspection, :car_id, @cars, :id, :model_board, {:prompt => true} ) %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
