<% title "Employee" %>

<p>
  <strong>Department:</strong>
  <%=h @employee.department.name %>
</p>
<p>
  <strong>Name:</strong>
  <%=h @employee.name %>
</p>
<p>
  <strong>Email:</strong>
  <%=h @employee.email %>
</p>
<p>
  <strong>Position:</strong>
  <%=h @employee.position %>
</p>
