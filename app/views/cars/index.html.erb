<% title "Cars" %>

<table>
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Model Year</th>
    <th>Manufacture Year</th>
    <th>Board</th>
    <th>Color</th>
  </tr>
  <% for car in @cars %>
    <tr>
      <td><%=h car.make %></td>
      <td><%=h car.model %></td>
      <td><%=h car.model_year %></td>
      <td><%=h car.manufacture_year %></td>
      <td><%=h car.board %></td>
      <td><%=h car.color %></td>
      <td><%= link_to "Show", car %></td>
      <td><%= link_to "Edit", edit_car_path(car) %></td>
      <td><%= link_to "Destroy", car, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Car", new_car_path %></p>
